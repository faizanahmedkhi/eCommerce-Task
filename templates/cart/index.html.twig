{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
    <div class="col-12 bg-light">
        
        <div class="">
        <span style="font-size: 40px; font-weight: bold;">Basket</span>  
        <span style="float:right"><a href="{{ path('product_index') }}">Click to Add More </a></span> 
        </div>
        
    </div>

    {% if items | length > 0 %}
   
       <table class="table">
          <thead>
              <tr>
                 <th>Product</th>
                 <th>Price</th>
                 <th>Quantity</th>
                 <th>Total</th>
                 <th></th>
               </tr>
          </thead>
             <tbody>
               {% for item in items %}
                      <tr>
                         <td>{{item.product.title}}</td>
                         <td>{{item.product.price}}</td>
                         <td>{{item.quantity}}</td>
                         <td>{{item.product.price * item.quantity}}</td>
                         <td>
                           <a href="{{ path('cart_remove', {'id': item.product.id }) }}" class="btn btn-danger btn-sm">
                               <i class="fas fa-trash"></i>
                            </a>
                         </td>
                      </tr>
                {% endfor %}
            </tbody>

             <tfoot>
                <tr>
                   <td colspan="3" class="text-right">Total : </td>
                   <td>{{ total }}</td>
                   <td></td>
                </tr>
             </tfoot>

       </table>

         {% else %}

<p>No Record Found !</p>

     {% endif %}
    
{% endblock %}
